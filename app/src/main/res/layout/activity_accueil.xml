<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".AccueilActivity">

    <TextView
        android:id="@+id/accueil_welcome_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginTop="150dp"
        android:text="@string/accueil_bonjour"
        android:textSize="25sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/accueil_recherche_bouton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/rounded_corners_white"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:text="@string/accueil_recherche"
            android:textSize="21sp"
            app:icon="@android:drawable/ic_menu_search"
            app:textAllCaps="false" />

        <Button
            android:id="@+id/accueil_scan_bouton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/rounded_corners_white"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:text="@string/accueil_ajout"
            android:textSize="21sp"
            app:icon="@android:drawable/ic_input_add"
            app:textAllCaps="false" />

    </LinearLayout>


    <Button
        android:id="@+id/accueil_possession_bouton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_corners_white"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:text="@string/accueil_possession"
        android:textSize="21sp"
        app:icon="@drawable/books2"
        app:textAllCaps="false" />

    <Button
        android:id="@+id/acceuil_profile_bouton"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Profil utilisateur"
        android:textSize="21sp" />


</LinearLayout>