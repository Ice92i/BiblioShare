<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".AccueilActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/accueil_bonjour"
        android:layout_marginTop="240dp"
        android:layout_marginStart="10dp"
        android:textSize="25sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="50dp">

        <Button
            android:id="@+id/accueil_recherche_bouton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/rounded_corners_button"
            android:text="@string/accueil_recherche"
            android:textSize="21sp"
            app:icon="@android:drawable/ic_menu_search"
            app:textAllCaps="false" />

        <Button
            android:id="@+id/accueil_scan_bouton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/rounded_corners_button"
            android:text="@string/accueil_ajout"
            android:textSize="21sp"
            app:icon="@android:drawable/ic_input_add"
            app:textAllCaps="false" />

    </LinearLayout>




    <Button
        android:id="@+id/accueil_possession_bouton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:text="@string/accueil_possession"
        android:textSize="21sp"
        app:textAllCaps="false"
        android:background="@drawable/rounded_corners_button"
        app:icon="@drawable/books2"/>


</LinearLayout>