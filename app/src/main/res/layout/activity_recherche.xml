<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".RechercheActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="210dp"
        android:text="@string/recherche_instructions"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textSize="25sp"
        android:gravity="center"/>

    <EditText
        android:id="@+id/recherche_livre_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/recherche_hint"
        android:layout_marginTop="30dp"
        android:textSize="25sp"/>

    <Button
        android:id="@+id/recherche_bouton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:text="@string/recherche_valider"
        android:textSize="23sp"/>

</LinearLayout>