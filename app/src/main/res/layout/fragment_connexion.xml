<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_warm_grey"
    tools:context=".FragmentConnexion"
    android:orientation="vertical"
    android:gravity="center">

    <EditText
        android:id="@+id/connexion_email_edittext"
        android:layout_width="360dp"
        android:layout_height="65dp"
        android:background="@drawable/rounded_corners_white"
        android:hint="@string/email"
        android:inputType="textEmailAddress"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/connexion_mdp_edittext"
        android:layout_width="360dp"
        android:layout_height="65dp"
        android:inputType="textPassword"
        android:hint="@string/mdp"
        android:textSize="30sp"
        android:padding="5dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_corners_white" />

    <Button
        android:id="@+id/connexion_bouton"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_marginTop="80dp"
        android:text="@string/connexion_valider"
        android:textSize="30sp"
        android:textAllCaps="false"
        android:gravity="center"
        android:textColor="@color/white"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:background="@drawable/rounded_corners_white" />

</LinearLayout>